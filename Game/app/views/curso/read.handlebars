<div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
  <div class="card-header">
    {{curso.nome}}
    <div>
      <a href="/curso/update/{{curso.id}}" style="padding-right: 6px"><i class="fas fa-edit"></i></a>
      <a href="/curso/remove/{{curso.id}}"><i class="fas fa-trash-alt"></i></a>
    </div>
  </div>
  <div class="card-body">
    <div>
      <b>Sigla: </b>{{curso.sigla}}
    </div>
    <div>
      <b>Nome: </b>{{curso.nome}}
    </div>
    <div>
      <b>Descrição: </b>{{curso.descricao}}
    </div>
    <div>
      <b>Area: </b> {{curso.areaId}}
    </div>
  </div>
</div>